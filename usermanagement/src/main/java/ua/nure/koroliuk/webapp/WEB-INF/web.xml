<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Browse servlet</servlet-name>
        <servlet-class>main.java.ua.nure.chub.servlet.BrowseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Browse servlet</servlet-name>
        <url-pattern>/browse</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add servlet</servlet-name>
        <servlet-class>main.java.ua.nure.chub.servlet.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add servlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Details servlet</servlet-name>
        <servlet-class>main.java.ua.nure.chub.servlet.DetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Details servlet</servlet-name>
        <url-pattern>/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Edit servlet</servlet-name>
        <servlet-class>main.java.ua.nure.chub.servlet.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Edit servlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
</web-app>